extends layout

block content
  .container
   if (!user)
    h1 Login Page
    br
    form(role='form', action="/login",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="username", placeholder='Enter Username')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      button.btn.btn-success(type='submit') Login
      &nbsp;
      a(href="/register") 
       button.btn.btn-primary(type="button") Register
  if (user)
      p You are currently logged in as #{user.username}
      a(href="/feed") 
       button.btn.btn-success(type="button") Go to your messages