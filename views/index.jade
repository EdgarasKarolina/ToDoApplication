extends layout

block content
  .container
    if (!user)
      a(href="/login") 
       button.btn.btn-primary(type="button") Login
      br
      a(href="/register") 
       button.btn.btn-primary(type="button") Register
    if (user)
      p You are currently logged in as #{user.username}
      a(href="/messages") 
       button.btn.btn-success(type="button") Go to your messages